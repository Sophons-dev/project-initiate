// Organization Models
// This file contains all organization-related models

model Organization {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  type        OrganizationType
  description String?
  website     String?
  logoUrl     String?
  location    String?
  organizationUrl String?

  // Enhanced organization details for AI recommendations
  aboutTheCompany String?
  industry        String?
  employmentSize  String?
  companyRating   Float?
  reviewCount     Int?

  createdAt   DateTime?
  updatedAt   DateTime?
  opportunities Opportunity[]

  @@index([type])
  @@index([industry])
  @@index([companyRating])
}
