model Question {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  version     Int           @default(1)
  text        String
  targetField String
  type        QuestionType
  options     String[]
  isActive    Boolean       @default(true)
  order       Int?
  stage       QuestionStage
  userTypes   UserType[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  UserAnswer  UserAnswer[]

  @@index([userTypes])
}
